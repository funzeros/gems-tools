{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./core",
    "types": [],
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "noImplicitAny": false,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "declaration": true
  },
  "exclude": ["node_modules", "unpackage", "src/**/*.nvue", "dist", "core"]
}
